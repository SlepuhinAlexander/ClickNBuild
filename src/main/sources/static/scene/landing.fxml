<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<StackPane fx:id="rootNode" onMouseClicked="#toMainMenu" prefHeight="990.0" prefWidth="1760.0"
           xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.itworks.clicknbuild.ui.controller.LandingController">
    <ImageView fx:id="backgroundImage" fitHeight="${rootNode.height}" preserveRatio="true"/>
    <Text fx:id="greetingMessage" styleClass="landing__greeting" StackPane.alignment="BOTTOM_CENTER">
        <StackPane.margin>
            <Insets bottom="200.0"/>
        </StackPane.margin>
    </Text>
    <padding>
        <Insets left="200.0" right="200.0"/>
    </padding>
</StackPane>
